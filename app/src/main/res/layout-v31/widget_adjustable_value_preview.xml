<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="56dp"
    android:background="@drawable/widget_shape"
    android:gravity="center"
    android:orientation="horizontal"
    android:theme="@android:style/Theme.DeviceDefault.DayNight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/decrease_selected_ttl"
        android:padding="16dp"
        android:src="@drawable/ic_remove_24"
        android:tint="?android:colorControlNormal" />

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:alpha="0.2"
        android:background="?android:colorControlNormal" />

    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="64"
            android:textColor="?android:colorControlNormal"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:alpha="0.2"
        android:background="?android:colorControlNormal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/increase_selected_ttl"
        android:padding="16dp"
        android:src="@drawable/ic_add_24"
        android:tint="?android:colorControlNormal" />

</LinearLayout>

